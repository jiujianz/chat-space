.message__left--block
  .message__left--block--user
    .message__left--block--user--contents
      %p.user__name
        = current_user.name
      %ul.menu__edit--icon
        =link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .message__left--block--groups
    .message__left--block--groups__chat
      - current_user.groups.each do |group|
        %p.group--name
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group--text
              = group.show_last_message